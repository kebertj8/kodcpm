<!DOCTYPE html>
<html>
<head>
  <title>DIY Construction Project Mangement</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= csrf_meta_tags %>
</head>
<body>
  
  <nav class="top-bar">
    <h1><a href="/">OPM Build</a></h1>
      <center>
        <%- if current_user -%>
        <%= link_to 'My Profile', edit_user_registration_path, class: "signup-link", method: :get %> | <%= link_to 'Sign Out', destroy_user_session_path, class: "signup-link", method: :delete %>

        <%- else -%>
          <%= link_to 'Sign Up', new_user_registration_path %> |
          <%= link_to 'Sign In', new_user_session_path %>
        <%- end -%>
      </center>
  </nav>

  <%- flash.each do |key, value| -%>
    <div class="flash flash-<%= key %>">
      <%= value %>
    </div>
  <%- end -%>

  <%= yield %>

  <%= javascript_include_tag 'application' %>
  
  <%- if Rails.env.development? || Rails.env.test? -%> 
    <%= javascript_tag do %>
      window.railsEnv = '<%= Rails.env %>'
    <%- end -%>
  <%- end -%>
  <%= javascript_pack_tag 'application' %>
  
  <%= yield :extra_footer %>
</body>
</html>
